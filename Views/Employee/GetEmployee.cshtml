@model MvcOnlineCommercialAutomation.Models.Classes.Employee
@{
    ViewBag.Title = "GetEmployee";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>Update Current Page</h2>
<br />
@using (Html.BeginForm("UpdateEmployee", "Employee", FormMethod.Post))
{
<div class="form-group">
    @Html.HiddenFor(x => x.EmployeeID)
    @Html.LabelFor(x => x.EmployeeName)
    @Html.TextBoxFor(x => x.EmployeeName, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.EmployeeSurname)
    @Html.TextBoxFor(x => x.EmployeeSurname, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.EmployeePicture)
    @Html.TextBoxFor(x => x.EmployeePicture, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Department)
    @Html.DropDownListFor(x => x.DepartmentID, (List<SelectListItem>)ViewBag.vls1, new { @class = "form-control" })
    <br />
    <button class="btn btn-default" style="background-color:yellowgreen">Update</button>
</div>
}


