@model MvcOnlineCommercialAutomation.Models.Classes.InvoiceItem
@{
    ViewBag.Title = "NewItem";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<h2>New Item Page</h2>
<br />
<form class="form-group" method="post">
    @Html.LabelFor(x => x.Note)
    @Html.TextBoxFor(x => x.Note, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Amount)
    @Html.TextBoxFor(x => x.Amount, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.UnitPrice)
    @Html.TextBoxFor(x => x.UnitPrice, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.TotalPrice)
    @Html.TextBoxFor(x => x.TotalPrice, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.InvoiceID)
    @Html.TextBoxFor(x => x.InvoiceID, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary">Save</button>
</form>


