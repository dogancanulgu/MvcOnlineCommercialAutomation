@using MvcOnlineCommercialAutomation.Models.Classes;
@model List<Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Product</th>
        <th>Brand</th>
        <th>Stock</th>
        <th>Purchase Price</th>
        <th>Selling Price</th>
        <th>Category</th>
        <th>Picture</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>
    @foreach(var p in Model)
            {
                <tr>
                    <td>@p.ProductID</td>
                    <td>@p.ProductName</td>
                    <td>@p.Brand</td>
                    <td>@p.Stock</td>
                    <td>@p.PurchasePrice</td>
                    <td>@p.SellPrice</td>
                    <td>@p.Category.CategoryName</td>
                    <td>@p.ProductPicture</td>
                    <td><a href="/Product/DeleteProduct/@p.ProductID" class="btn btn-danger">Delete</a></td>
                    <td><a href="/Product/GetProduct/@p.ProductID" class="btn btn-success">Update</a></td>
                </tr>
            }
</table>
<a href="/Product/NewProduct/" class="btn btn-info">New Product</a>

